{
  "version": 2,
  "cleanUrls": true,
  "trailingSlash": false,
  "rewrites": [
    { "source": "/de/:path*", "destination": "/de/:path*/index.html" },
    { "source": "/en/:path*", "destination": "/en/:path*/index.html" },
    { "source": "/es/:path*", "destination": "/es/:path*/index.html" },
    { "source": "/fr/:path*", "destination": "/fr/:path*/index.html" },
    { "source": "/it/:path*", "destination": "/it/:path*/index.html" },
    { "source": "/", "destination": "/de/index.html" }
  ]
}
